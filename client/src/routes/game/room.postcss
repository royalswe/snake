:root {
	--color-primary: #0f4e6f;
	--color-secondary: #4d7fa3;
	--color-tertiary: #d0f5ff;
	--color-quaternary: #e79b25;
}

.wrapper {
	background-color: var(--color-primary);
	color: #fff;

	height: 100vh;
	display: grid;
	gap: 1em;
	padding: 1em;
	grid-template:
		'header header'
		'sidebar main' minmax(auto, calc(100vh - 75px)) / 350px auto;

	@media (width < 600px) {
		grid-template:
			'header'
			'main' 1fr
			'sidebar';
	}
}
header {
	grid-area: header;
	color: antiquewhite;
}
sidebar {
	grid-area: sidebar;
	background-color: var(--color-secondary);
}
main {
	grid-area: main;
	background-color: var(--color-secondary);
	overflow: hidden;
	min-height: 100px;
}

hr {
	display: block;
	height: 1px;
	border: 0;
	border-top: 1px solid var(--color-quaternary);
	margin: 1em 0;
	padding: 0;
}
